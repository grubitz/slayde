<p id="notice"><%= notice %></p>
<div class="container">
<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Confirmed at</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td></td>
        <td><%= user.email %></td>
        <td><%= user.confirmed_at %></td>
        <td><%= yes_no(user.is_admin) %></td>
        <td>
          <%= link_to 'Show', user, class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-link' %>
          <%= link_to 'Destroy', user, method: :delete,
                      data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-dark' %>
</div>
