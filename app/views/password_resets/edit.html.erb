<%= form_with(model: @user, local: true, method: :patch, url: password_reset_path(@user.reset_password_token)) do |form| %>
  <div class="col-md-4">
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control'  %>
    </div>

    <div class="actions">
      <%= form.submit value: 'Save', class: 'btn btn-dark' %>
    </div>
  </div>
<% end %>

