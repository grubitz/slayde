<%= form_with(url: password_resets_path, local: true) do |form| %>
  <div class="col-md-4">
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= form.submit value: 'Send password reset token', class: 'btn btn-dark', 'data-disable-with': 'Please wait' %>
    </div>
  </div>
<% end %>
