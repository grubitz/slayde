<%= form_with(model: @picture, local: true) do |form| %>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit value: t('link.save'),
                        class: 'btn btn-dark',
                        'data-disable-with': t('link.disable_with') %>
      </div>
    </div>
<% end %>
